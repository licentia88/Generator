@inherits ServicePageBase<GRID_M, GRID_VIEW, IGridViewService>

 

<GenGrid DataSource="@(DataSource)"
         TModel="GRID_VIEW"
         EditMode="EditMode.SmartForm"
         Title="Crud Settings"
         MaxWidth="MaxWidth.ExtraLarge"
         EditTrigger="TableEditTrigger.EditButton"
         Class="m-2"
         Load="Load"
         Update="Update"
         Cancel="Cancel"
         Create="@Create">
    <GenColumns>

        <GenTextField BindingField="@nameof(GRID_VIEW.VBM_TITLE)"
                      Label="Title"
                      EditorEnabled="false"
                      xs="12" sm="12" md="12" lg="3" xl="3" xxl="3"/>
  
    </GenColumns>

    <GenDetailGrid>
            <MudTabs Class="mt-5" Style="width:100%!important" Color="Color.Primary">
                <MudTabPanel Text="Fields">
                    <GridFieldsPage ParentModel="context"  />
                </MudTabPanel>
            </MudTabs>
        </GenDetailGrid>
</GenGrid>