@page "/GenericComponentTest"
@inherits ComponentBase

@{
    if (InternalDataSource is not null)
    {
        <GenGrid
                 TModel="object"
                 Create="async x=>await OnCreate(x)"
                 Update="async x=>await OnUpdate(x)"
                 Delete="async x=>await OnDelete(x)"
                 Cancel="async x=>await Cancel(x)"
                 Class="m-2"
                 EditMode="EditMode.Form"
                 Title="GenericTest1"
                 DataSource="InternalDataSource"
                 EnableSearch="true">

                 <GenHeaderButtons>
                    <MudFab  Icon="@Icons.Material.Filled.AccessAlarm" Size="Size.Small" />
                 </GenHeaderButtons>

            <GenColumns>

                <GenTextField BindingField="TT_ROWID" Label="Row Id"
                              xs="12" sm="12" md="12" lg="2" xl="2" xxl="2" />

                <GenSpacer xs="12" sm="12" md="12" lg="2" xl="2" xxl="2" />

                <GenComboBox Clearable="true"
                             Required="true" 
                             Placeholder="Seciniz" Label="ComboTest"
                             DataSource="@ComboDataSource"
                             EditorVisible="false"
                             BindingField="TT_STRING_TABLE_CODE"
                             ValueField="CT_ROWID" DisplayField="CT_DESC"
                             xs="12" sm="12" md="12" lg="4" xl="4" xxl="4" />

                <GenSpacer xs="12" sm="12" md="12" lg="4" xl="4" xxl="4" />

                <GenTextField BindingField="TT_DESC" Label="Description"  Required="true" />

                <GenCheckBox BindingField="TT_BOOLEAN"  
                             xs="12" sm="12" md="12" lg="2" xl="2" xxl="2" 
                             TrueText="Evet"
                             FalseText="Hayir" 
                             Label="BooleanTest"
                             LabelPosition="LabelPosition.End"/>
                @*<GenTextField BindingField="TT_DATE" InputType="InputType.Date" Label="Date" />*@
                <GenDatePicker  BindingField="TT_DATE" Label="Date" Clearable="true" TransformOrigin="Origin.BottomLeft" Required="true"/>
                <GenTextField BindingField="TT_NULLABLE_DATE" InputType="InputType.Date" Label="NullableDate" Required="true" Clearable="true"/>
            </GenColumns>
            <GenDetailGrid>
                <GenGrid Class="mt-2"
                         EditMode="EditMode.Form"
                         Title="GenericTest1"
                         DataSource="InternalDataSource"
                         EnableSearch="false">
                    <GenColumns>
                        <GenTextField BindingField="TT_ROWID" Label="Row Id" />
                        <GenTextField BindingField="TT_DESC" Label="Description" />
                        <GenTextField BindingField="TT_DATE" InputType="InputType.Date" Label="Date" />
                        <GenTextField BindingField="TT_NULLABLE_DATE" InputType="InputType.Date" Label="NullableDate" />
                    </GenColumns>

                </GenGrid>
            </GenDetailGrid>
        </GenGrid>

    }

}

 
