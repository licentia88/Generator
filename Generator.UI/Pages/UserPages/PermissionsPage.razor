@page "/Permissions"


@inherits PagesBase<GRID_M,PERMISSIONS, PermissionsService, IPermissionsService>

 

<GenGrid TModel="PERMISSIONS"
         Title="Permissions"
         Class="m-2"
         Disabled="true"
         DataSource="@DataSource.Where(whereClause).ToList()"
         MaxWidth="MaxWidth.ExtraExtraLarge"
         EditTrigger="TableEditTrigger.EditButton"
         EditMode="EditMode.SmartForm">

    <GenColumns>

        <GenTextField BindingField="@nameof(PERMISSIONS.AUTH_ROWID)"
                      Label="Auth Code"
                      EditorEnabled="false"
                      xs="12" sm="12" md="12" lg="3" xl="3" xxl="3" />

        <GenSpacer xs="12" sm="12" md="12" lg="1" xl="1" xxl="1" />

        <GenTextField BindingField="@nameof(PERMISSIONS.AUTH_NAME)"
                      Label="Role Name"
                      EditorEnabled="false"
                      xs="12" sm="12" md="12" lg="4" xl="4" xxl="4" />

        <GenSpacer xs="12" sm="12" md="12" lg="1" xl="1" xxl="1" />
       

        <GenTextField BindingField="@nameof(PERMISSIONS.Description)"
                      Label="Description"
                      EditorEnabled="false"
                      Lines="4"
                      xs="12" sm="12" md="12" lg="12" xl="12" xxl="12" />

    </GenColumns>
</GenGrid>