@page "/Roles"


@inherits PagesBase<ROLES, RolesService, IRolesService>



<GenGrid TModel="ROLES"
         Title="Roles"
         Class="m-2"
         Load="Load"
         Create="Create"
         Update="Update"
         Cancel="Cancel"
         DataSource="@DataSource"
         MaxWidth="MaxWidth.ExtraExtraLarge"
         EditTrigger="TableEditTrigger.EditButton"
         EditMode="EditMode.SmartForm">
    <GenColumns>

        <GenTextField BindingField="@nameof(ROLES.AUTH_ROWID)"
                      Label="Auth Code"
                      EditorEnabled="false"
                      xs="12" sm="12" md="12" lg="3" xl="3" xxl="3" />

        <GenSpacer xs="12" sm="12" md="12" lg="1" xl="1" xxl="1" />

        <GenTextField BindingField="@nameof(ROLES.AUTH_NAME)"
                      Label="Role Name"
                      xs="12" sm="12" md="12" lg="3" xl="3" xxl="3" />

        <GenSpacer xs="12" sm="12" md="12" lg="5" xl="5" xxl="5" />

 
        <GenSpacer xs="12" sm="12" md="12" lg="1" xl="1" xxl="1" />



    </GenColumns>

    <GenDetailGrid>
        <MudTabs Class="mt-5" Style="width:100%!important" Color="Color.Primary">
            <MudTabPanel Text="Role Details">
                <RolesDetailsPage  ParentModel="context"/>
            </MudTabPanel>
        </MudTabs>
    </GenDetailGrid>
</GenGrid>