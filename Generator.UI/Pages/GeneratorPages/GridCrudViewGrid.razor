        <GenCheckBox BindingField="@nameof(CRUD_VIEW.CV_UPDATE)" Label="Update" TrueText="Yes" FalseText="No"
                     xs="12" sm="12" md="12" lg="3" xl="3" xxl="3" />
        <GenSpacer xs="12" sm="12" md="12" lg="1" xl="1" xxl="1" />

        <GenCheckBox BindingField="@nameof(CRUD_VIEW.CV_DELETE)" Label="Delete" TrueText="Yes" FalseText="No"
                     xs="12" sm="12" md="12" lg="3" xl="3" xxl="3" />
